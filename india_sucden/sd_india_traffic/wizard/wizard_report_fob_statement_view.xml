<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_report_fob_statement_form" model="ir.ui.view">
            <field name="name">wizard_report_fob_statement_form</field>
            <field name="model">wizard.report.fob.statement</field>
            <field name="arch" type="xml">
                <form string="Report FOB Statement">
                    <sheet>
			            <group>
                            <field name="item_group_ids" widget="many2many_tags" options="{'no_create': true}"/>
		            		<label for="date_from" string="Date from"/>
							<div>
								<field name="date_from" class="oe_inline" required="1"/>
								<span>       </span><span>   Date to</span>
								<field name="date_to" class="oe_inline ms-3" required="1"/>
							</div>
							<field name="sale_contract_ids" widget="many2many_tags" options="{'no_create': true}" context="{'fob_report':True, 'date_from': date_from, 'date_to': date_to, 'item_group_ids': item_group_ids}"/>
		                </group>
		                <group>

		                </group>
		                <footer>
		                	<button string="Search" name="button_render" type="object" class="oe_highlight"/>
		                    <button string="Cancel" class="btn-default" special="cancel"/>
		                </footer>
	                </sheet>
                </form>
            </field>
        </record>

        <record id="action_report_fob_statement" model="ir.actions.act_window">
            <field name="name">Report FOB Statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.report.fob.statement</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>