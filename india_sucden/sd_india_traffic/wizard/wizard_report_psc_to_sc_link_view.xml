<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_report_psc_to_sc_link_form" model="ir.ui.view">
            <field name="name">wizard_report_psc_to_sc_link_form</field>
            <field name="model">wizard.report.psc.to.sc</field>
            <field name="arch" type="xml">
                <form string="Report PSC to SC Link">
                    <sheet>
			            <group>
                            <field name="season_id" options="{'no_create': true}"/>
                            <field name="item_group_ids" widget="many2many_tags" options="{'no_create': true}"/>
		            		<label for="date_from" string="Date from"/>
							<div>
								<field name="date_from" class="oe_inline"/>
								<span>       </span><span>   Date to</span>
								<field name="date_to" class="oe_inline ms-3"/>
							</div>
                            <field name="sale_contract_ids" widget="many2many_tags" context="{'psc_to_sc_report':True, 'date_from': date_from, 'date_to': date_to, 'item_group_ids': item_group_ids, 'crop_id': season_id}"
                                   options="{'no_create': true}"/>
		                </group>
		                <group>

		                </group>
		                <footer>
		                	<button string="Generate" name="button_render" type="object" class="oe_highlight"/>
		                    <button string="Cancel" class="btn-default" special="cancel"/>
		                </footer>
	                </sheet>
                </form>
            </field>
        </record>

        <record id="action_report_psc_to_sc_link" model="ir.actions.act_window">
            <field name="name">Report PSC to SC Link</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.report.psc.to.sc</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>