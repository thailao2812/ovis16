<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
		<record id="view_fob_manager_tree_india" model="ir.ui.view">
            <field name="name">view_fob_manager_tree_india</field>
            <field name="model">fob.management.india</field>
            <field name="arch" type="xml">
                <tree string="FOB Management" default_order="id desc">
                	<field name="name"/>
                	<field name="fob_date"/>
                	<field name="exchange"/>
                	<field name="market_id"/>
                	<field name="forex_rate_inr"/>
                	<field name="fob"/>
                	<field name="fob_usd"/>
                	<field name="market_price"/>
                	<field name="total_cost"/>
                	<field name="yield_loss"/>
                	<field name="farm_gate_price_1st"/>
                	<field name="farm_gate_price_2nd"/>
                	<field name="price"/>
                	<field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_fob_manager_form_india" model="ir.ui.view">
            <field name="name">view_fob_manager_form_india</field>
            <field name="model">fob.management.india</field>
            <field name="arch" type="xml">
                <form string="FOB Management">
                    <header>
                        <button name="button_submit" string='Submit' type="object" class="oe_highlight" states="draft"/>
                        <button name="button_approve" string='Approve' type="object" class="oe_highlight" states="submit"/>
                        <button name="close_fob" string='Close' type="object" class="oe_highlight" states="approve"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,close"/>
                    </header>
                	<sheet>
                		<div class="oe_title">
                			<label for="name" string="FOB No" class="oe_edit_only"/>
	                        <h1>
	                            <field name="name" readonly="1"/>
	                        </h1>
	                    </div>
                        <group>
                            <group>
                                <field name="crop_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="fob_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="exchange" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="market_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                                <field name="forex_rate_inr" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="fob" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="fob_usd" readonly="1"/>
                                <field name="market_price" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                		    </group>
                            <group>
                                <field name="total_cost" readonly="1" force_save="1"/>
                                <field name="yield_loss" readonly="1" force_save="1"/>
                                <field name="farm_gate_price_1st" readonly="1"/>
                                <field name="farm_gate_price_2nd" readonly="1"/>
                                <field name="price" readonly="1"/>
                		    </group>
                        </group>

	                </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    <record id="view_fob_manager_search_india" model="ir.ui.view">
            <field name="name">view_fob_manager_search_india</field>
            <field name="model">fob.management.india</field>
            <field name="arch" type="xml">
                <search string="FOB Manager search">
                	<field name="name" string="FOB No"/>
                </search>
            </field>
        </record>

    	<record id="action_fob_management_india" model="ir.actions.act_window">
            <field name="name">FOB Management</field>
            <field name="res_model">fob.management.india</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              		Create a Fob Management, the first step of a new Fob Management.
              </p>
            </field>
        </record>
</odoo>