<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="item_group_tree_view" model="ir.ui.view">
            <field name="name">item_group_tree_view</field>
            <field name="model">product.group</field>
            <field name="arch" type="xml">
                <tree string="Item Group" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="item_group_search_view" model="ir.ui.view">
            <field name="name">item_group_search_view</field>
            <field name="model">product.group</field>
            <field name="arch" type="xml">
                <search string="Item Group">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="item_group_act_window" model="ir.actions.act_window">
            <field name="name">Item Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Item Group.
                </p>
            </field>
        </record>


    </data>
</odoo>