<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_exchange_tree_india" model="ir.ui.view">
            <field name="name">view_exchange_tree_india</field>
            <field name="model">exchange.india</field>
            <field name="arch" type="xml">
                <tree string="Exchange" editable="top" default_order="id desc">
                	<field name="name"/>
                	<field name="currency_id" required="1"/>
                	<field name="market_id" required="1"/>
                	<field name="yield_loss"/>
                	<field name="rate" readonly="1" force_save="1"/>
                	<field name="default_data"/>
                	<field name="active"/>
                </tree>
            </field>
        </record>

    <record id="action_exchange_india" model="ir.actions.act_window">
            <field name="name">Exchange</field>
            <field name="res_model">exchange.india</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              		Create a Exchange, the first step of a new Exchange
              </p>
            </field>
        </record>
</odoo>