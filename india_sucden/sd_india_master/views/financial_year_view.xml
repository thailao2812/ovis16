<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="financial_year_tree" model="ir.ui.view">
        <field name="name">financial_year_tree</field>
        <field name="model">financial.year</field>
        <field name="arch" type="xml">
            <tree string="Financial Year" editable ='top'>
				<field name="name" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<field name="from_date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<field name="to_date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<field name="max_value" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<field name="percent_for_pan" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<field name="percent_unpan" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
				<button name="confirm_year" string="Confirm" type="object" attrs="{'invisible': [('state', '=', 'confirm')]}"/>
				<button name="button_set_to_draft" string="Revert" type="object" attrs="{'invisible': [('state', '=', 'new')]}"/>
				<field name="state" widget="badge" readonly="1"/>
            </tree>
        </field>
    </record>

     <record id="action_financial_year" model="ir.actions.act_window">
        <field name="name">Financial Year</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">financial.year</field>
        <field name="view_id" ref="financial_year_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_financial_year"
            name="Financial Year"
            action="action_financial_year"
            parent="sd_master.menu_master_data_sucden_root"
            sequence="105"/>
</odoo>