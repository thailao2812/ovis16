<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_only_form_view_inherit_india" model="ir.ui.view">
        <field name="name">product_template_only_form_view_inherit_india</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='default_code']" position="after">
            	<field name="hsn_code" invisible="1"/>
            	<field name="template_qc"/>
            </xpath>

        </field>
    </record>

    <record id="product_normal_form_view_inherit_india" model="ir.ui.view">
        <field name="name">product_normal_form_view_inherit_india</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='default_code']" position="after">
            	<field name="hsn_code" invisible="1"/>
            	<field name="template_qc"/>
            </xpath>

        </field>
    </record>

    <record id="product_template_tree_view_inherit_india" model="ir.ui.view">
        <field name="name">product_template_tree_view_inherit_india</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='barcode']" position="before">
            	<field name="template_qc"/>
            </xpath>

        </field>
    </record>

    <record id="product_product_tree_view_inherit_india" model="ir.ui.view">
        <field name="name">product_product_tree_view_inherit_india</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='barcode']" position="before">
            	<field name="template_qc"/>
            </xpath>

        </field>
    </record>
</odoo>