        <!-- The block of code bellow determines a list of search parameters appear once user type in the searchbar -->
        <record id="search_production_report" model="ir.ui.view">
            <field name="name">view.production.report.search</field>
            <field name="model">v.production.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name = "batch_no"/>
                    
                    <group expand="1" string="Group By">
                        <filter string="Batch" domain="[]" name="group_batch_no" context="{'group_by':'batch_no'}"/>
                        <filter string="BOM type" domain="[]" name="group_bom_type" context="{'group_by':'bom_type'}"/>
                        <filter string="Date" domain="[]" name="group_picking_date" context="{'group_by':'picking_date'}"/>
                        <filter string="Opration type" domain="[]" name="group_operation_type" context="{'group_by':'operation_type'}"/>
                        <filter string="Product" name="product_group" domain="[]" context="{'group_by':'product'}"/>
                        
                        <separator string = 'Shipper'/>
                            <filter domain="[('operation_type','=','IN')]" string="Input" name='operation_type_in'/>
                            <filter domain="[('operation_type','=','OUT')]" string="Output" name='operation_type_out'/>
                            <filter domain="[('state','!=','done')]" string="Undone" name='status'/>
                            <filter domain="[('state','=','done')]" string="Done" name='status_done'/>
                        <separator string = 'Stauts'/>
                    </group>
                </search>
             </field>
         </record>
         
