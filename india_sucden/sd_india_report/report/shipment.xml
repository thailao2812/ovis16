<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
   
    	<record id="view_report_shipment" model="ir.ui.view">
            <field name="name">view.report.shipment</field>
            <field name="model">report.v.shipment</field>
            <field name="arch" type="xml">
    			<form string="Shipment">
					<sheet>
	                    <div>
	                        <div>
								<field name="shipment_date_from"/>
	                            <field name="shipment_date_to"/>
                                <separator string=""/>
								<field name="factory_etd_from"/>
                                <field name="factory_etd_to"/>
	                        </div>
	                    </div>
					</sheet>
					<footer>
						<button name="load_shipment" string="Open" class="oe_highlight" type="object"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
				</form>
	         </field>
         </record>

        <!-- the block of code below is the action to trigger the list open -->
        <record id="action_report_shipment" model="ir.actions.act_window">
            <field name="name">Shipment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.v.shipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> 
        </record>
			
		<menuitem id="menu_filter_shipment" action="action_report_shipment" sequence="20" 
        	parent="ned_report.menu_report_ned_mrp_master" name="Open Shipment"/>

		<record id="view_sales_shipment_inherit" model="ir.ui.view">
            <field name="name">vshipment.tree.inherit.franchise</field>
            <field name="model">v.shipment</field>
            <field name="inherit_id" ref="ned_report.view_sales_shipment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='s_contract']" position="after">
                    <field name="allowed_franchise"/>
                </xpath>
                <xpath expr="//field[@name='packing_place']" position="replace">
                    <field name="warehouse" readonly="1"/>
                </xpath>
            </field>
        </record>



        <record id="view_vcashbook" model="ir.ui.view">
            <field name="name">view.vcashbook</field>
            <field name="model">v.cash.book</field>
            <field name="arch" type="xml">
    			<tree editable="False" readonly="True">
                    <field name="prod_group"/>
                    <field name="product"/>

                    <field name="sitting_stock" sum="Sitting Stock"/>
                    <field name="faq_derivable" sum="FAQ Derivable"/>
                    <field name="npe_received_unfixed" sum="NPE Unfixed"/>
                    <!-- <field name = 'gross_ls' sum="Gross LS"/> -->

                    <field name="nvp_receivable" sum="NVP Receivable"/>
                    <field name="unshipped_qty" sum="Sales Unshipped"/>
                    <field name="net_ls" sum="Net LS"/>

                    <field name="nvp_next1_receivable" sum="Next1 NVP"/>
                    <field name="sale_next1_unshipped" sum="Next1 S"/>
                    <field name="next1_net_ls" sum="Next1 LS"/>

                    <field name="nvp_next2_receivable" sum="Next2 NVP"/>
                    <field name="sale_next2_unshipped" sum="Next2 S"/>
                    <field name="next2_net_ls" sum="Next2 LS"/>

                    <field name="nvp_next3_receivable" sum="Next3 NVP"/>
                    <field name="sale_next3_unshipped" sum="Next3 S"/>
                    <field name="next3_net_ls" sum="Next3 LS"/>

                    <field name="nvp_next4_receivable" sum="Next4 NVP"/>
                    <field name="sale_next4_unshipped" sum="Next4 S"/>
                    <field name="next4_net_ls" sum="Next4 LS"/>

                    <field name="nvp_next5_receivable" sum="Next5 NVP"/>
                    <field name="sale_next5_unshipped" sum="Next5 S"/>
                    <field name="next5_net_ls" sum="Next5 LS"/>

                    <field name="nvp_next6_receivable" sum="Next6 NVP"/>
                    <field name="sale_next6_unshipped" sum="Next6 S"/>
                    <field name="next6_net_ls" sum="Next6 LS"/>
                </tree>
	         </field>
         </record>

        <!-- the block of code below is the action to trigger the list open -->
        <record id="action_vcashbook" model="ir.actions.act_window">
            <field name="name">CashBook</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">v.cash.book</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="priority">230</field>
        </record>


    </data>
</openerp>
