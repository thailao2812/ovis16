<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mrp_production_form_inherit_india" model="ir.ui.view">
        <field name="name">view_mrp_production_form_inherit_india</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="sd_mrp.mrp_production_form_view_inherited_sucden"/>
        <field name="arch" type="xml">
			 <xpath expr="//sheet/group/group/div[@class='o_row'][2]" position="after">
            	<field name="transaction_no" required="1"/>
            </xpath>

        </field>
    </record>

    <record id="view_mrp_production_tree_inherit_india" model="ir.ui.view">
        <field name="name">view_mrp_production_tree_inherit_india</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="sd_mrp_quality.mrp_production_tree_qc_view"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='bom_id']" position="before">
            	<field name="transaction_no"/>
            </xpath>

        </field>
    </record>
</odoo>