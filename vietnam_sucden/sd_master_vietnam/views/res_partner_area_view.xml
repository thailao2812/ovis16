    <record id="view_res_partner_filter_inherit_sucden_vn" model="ir.ui.view">
            <field name="name">view_res_partner_filter_inherit_sucden_vn</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_code"/>
                    <field name="in_deforestation"/>
                </xpath>
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter string="In Deforestation" name="in_deforestation" domain="[('in_deforestation', '=', 'yes')]"/>
                    <filter string="Not In Deforestation" name="not_in_deforestation" domain="[('in_deforestation', '=', 'no')]"/>
                </xpath>
            </field>
    </record>

