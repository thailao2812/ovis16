<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base_google_map</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="500"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">
                    <div name="base_google_map">
                        <h2>Google Maps View</h2>
                        <div class="row mt16 o_settings_container" name="google_map_integration">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <!-- <label string="Configure your Google Maps View"/> -->
                                    <div class="text-muted">
                                        <p>Set Google API key and map localization</p>
                                        <span>Visit the <a href="https://developers.google.com/maps/documentation/javascript/localization" target="_blank">page</a> about Localizing the Map</span>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="google_maps_view_api_key" string="Api key : "/>
                                            <field name="google_maps_view_api_key"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="google_maps_libraries" string="Libraries : "/>
                                            <field name="google_maps_libraries"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="google_maps_lang_localization" string="Language : "/>
                                            <field name="google_maps_lang_localization"/>
                                        </div>
                                        <div class="mt16" attrs="{'invisible': [('google_maps_lang_localization', 'in', [False, ''])]}">
                                            <div class="text-muted">
                                                If you set the language of the map, it's important to consider setting the region too. This helps ensure that your application complies with local laws.
                                            </div>
                                            <label for="google_maps_region_localization" string="Region : "/>
                                            <field name="google_maps_region_localization"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="google_map_theme">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="google_maps_theme" string="Theme"/>
                                            <field name="google_maps_theme" widget="radio"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="google_autocomplete_lang_restrict" attrs="{'invisible': [('google_maps_lang_localization', '=', False)]}">
                                <div class="o_setting_left_pane">
                                    <field name="google_autocomplete_lang_restrict"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="google_autocomplete_lang_restrict" />
                                    <div class="text-muted">
                                        The language code, indicating in which language the results should be returned, if possible. Searches are also biased to the selected language; results in the selected language may be given a higher ranking.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="google_autocomplete_country_restrict">
                                <div class="o_setting_left_pane">
                                    <field name="google_autocomplete_country_restrict"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="google_autocomplete_country_restrict" />
                                    <div class="text-muted">
                                        Restrict search results to a specific country. This is especially helpful if you want restrict the search within a country. Support up to 5 countries.
                                    </div>
                                    <field name="google_autocomplete_country_restriction_str" invisible="1"/>
                                    <label for="google_autocomplete_country_restriction" string="Countries : " attrs="{'invisible': [('google_autocomplete_country_restrict', '=', False)]}"/>
                                    <field name="google_autocomplete_country_restriction" widget="many2many_tags" attrs="{'invisible': [('google_autocomplete_country_restrict', '=', False)]}"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="google_map_enable_place_search">
                                <div class="o_setting_left_pane">
                                    <field name="google_enable_map_place_search"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="google_enable_map_place_search"/>
                                    <div class="text-muted">
                                        <p>Enable Google Places Search Autocomplete in Google map. This feature required the &#8220;Places API&#8221; to be enabled in your Google API key.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
