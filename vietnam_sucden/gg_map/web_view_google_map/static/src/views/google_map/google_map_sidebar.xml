<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web_view_google_map.GoogleMapSidebar" owl="1">
        <div class="o_map_sidebar" t-ref="root">
            <div class="mt-2 mx-3">
                <div class="d-flex">
                    <t t-if="props.allowSelectors">
                        <CheckBox value="props.handleSelectAll" onChange.bind="props.handleToggleSelection"/>
                    </t>
                    <h3>
                        <t t-esc="props.string"/>
                    </h3>
                </div>
            </div>
            <ul class="list-group">
                <t t-foreach="props.records" t-as="record" t-key="record.id">
                    <t t-set="data" t-value="getData(record)"/>
                    <t t-set="hasGeolocation" t-value="this.hasGeolocation(record)"/>
                    <t t-set="markerColor" t-value="this.getMarkerColor(record)"/>
                    <li t-attf-class="list-group-item pb-1 pt-1 #{hasGeolocation ? '' : 'bg-100'} #{record.selected ? 'list-group-item-info': ''}">
                        <div class="d-flex justify-content-between align-items-center">
                            <t  t-if="props.allowSelectors">
                                <CheckBox disabled="!props.handleCanSelectRecord" value="record.selected" onChange.alike="() => this.selectRecord(record)"/>
                            </t>
                            <a href="#" class="flex-grow-1 o_map_sidebar_record" data-toggle="tooltip" t-attf-style="cursor: #{hasGeolocation ? 'pointer' : 'not-allowed'};" t-attf-title="#{hasGeolocation ? '' : 'No geolocation'}" t-on-click="() => props.handlePointInMap(record.id)">
                                <span class="title" t-esc="data.title" />
                                <t t-if="data.subTitle">
                                    <br/>
                                    <t t-if="hasGeolocation">
                                        <i class="fa fa-map-marker" t-attf-style="color: #{markerColor};"></i>
                                        <span> </span>
                                    </t>
                                    <span class="text-muted" t-esc="data.subTitle"/>
                                </t>
                            </a>
                            <button type="button" class="btn btn-sm btn-light" id="open-record" data-toggle="tooltip" title="Open form" t-on-click.prevent="() => props.handleOpenRecord(record)">
                                <i class="fa fa-arrow-right"></i>
                            </button>
                        </div>
                    </li>
                </t>
            </ul>
        </div>
    </t>
</templates>
