<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="crm_google_map.MarkerInfoWindow" owl="1">
        <div class="infoWindow">
            <hr t-if="isMulti"/>
            <div class="d-flex flex-grow-1 flex-md-shrink-1 flex-shrink-0">
                <div class="o_kanban_record d-flex">
                    <div class="oe_kanban_card d-flex flex-column">
                        <div class="d-flex o_kanban_header">
                            <a t-attf-href="https://www.google.com/maps/dir/?api=1&amp;destination={{ destination }}" target="_blank" tabindex="-1" class="btn btn-light" id="btn-navigate_to" data-toggle="tooltip" title="Navigate to this location">
                                <i class="fa fa-map-signs"></i>
                                <span class="text-uppercase"> Navigate to</span>
                            </a>
                            <a t-attf-href="https://www.google.com/maps/search/?api=1&amp;query={{ destination }}" target="_blank" tabindex="-1" class="btn btn-light" id="btn-view-on-googlemaps" data-toggle="tooltip" title="View on Google Maps website">
                                <span class="text-uppercase"> View on Google Maps</span>
                            </a>
                        </div>
                        <div class="oe_kanban_details d-flex flex-column justify-content-between pt-3">
                            <div class="o_kanban_record_title">
                                <h3>
                                    <a href="#" role="button" class="text-decoration-none" id="btn-open_form">
                                        <t t-esc="title"/>
                                    </a>
                                </h3>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <t t-esc="subTitle"/>
                            </div>
                        </div>
                        <div class="row pt-2 font-monospace">
                            <div class="col-6 mb-2" t-if="expectedRevenue">
                                <small>Expected Revenue</small>
                                <br/>
                                <i class="fa fa-usd"></i>
                                <span class="ps-1" t-out="expectedRevenue"/>
                            </div>
                            <div class="col-6 mb-2" t-if="probability">
                                <small>Probability</small>
                                <br/>
                                <span class="pe-1" t-out="probability"/>
                                <i class="fa fa-percent"></i>
                            </div>
                            <div class="col-6 mb-2" t-if="dateDeadline">
                                <small>Expected Closing</span>
                                <br/>
                                <span t-out="dateDeadline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>