<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_refuse_reason_wizard" model="ir.actions.act_window">
            <field name="name">Refuse Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.refuse.request</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <record id="refuse_reason_wizard_form" model="ir.ui.view">
            <field name="name">refuse_reason_wizard_form</field>
            <field name="model">wizard.refuse.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reason" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button
                                name="action_refuse"
                                string="Refuse"
                                type="object"
                                class="btn-primary"
                                confirm="Do you want to refuse request?"
                        />
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>