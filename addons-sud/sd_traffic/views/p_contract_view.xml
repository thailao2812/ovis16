<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	
    <record id="view_p_contract_traffic_tree" model="ir.ui.view">
            <field name="name">view_p_contract_traffic_tree</field>
            <field name="model">s.contract</field>
            <field name="arch" type="xml">
                <tree string="P Contract" editable="top" create="false" default_order="id desc">
					    <field name="origin_new"/>
                        <field name="shipt_month"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="x_coffee_type"/>
                        <field name="standard_id"/>
                        <field name="p_qty"/>
                        <field name="no_of_pack"/>
                        <field name="packing_id"/>
                        <field name="license_id" options='{"no_create": True, "no_write": True}' domain="[('type_license', '=', 'bonded'), ('state', '=', 'active')]"/>
                        <field name="expired_date"/>
                        <field name="certificate_id"/>
                        <field name="p_quality"/>
                        <field name="warehouse_id"/>
                        <field name="wr_date"/>
                        <field name="wr_line"/>
                        <field name="wr_line_code"/>
                        <field name="init_qty"/>
                        <field name="bag_in_stock" readonly="1"/>
                        <field name="qty_allocated"/>
                        <field name="bag_allocated"/>
                        <field name="allocated_not_out"/>
                        <field name="allocated_bag_not_out"/>
                        <field name="tb_qty_alloca"/>
                        <field name="tb_bag_alloca"/>
                        <field name="out_qty"/>
                        <field name="bag_out_stock" readonly="1"/>
                        <field name="remaining_qty"/>
                        <field name="balance_bags"/>
                        <field name="loss_weight"/>
                        <field name="loss_weight_percent"/>
                        <field name="certificate"/>
                        <field name="cert_validity"/>
                        <field name="stock_validity"/>
                        <field name="status_p" readonly="1"/>
                        <field name="x_final_price" readonly="1"/>
                        <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="view_p_contract_search" model="ir.ui.view">
            <field name="name">view_p_contract_search</field>
            <field name="model">s.contract</field>
            <field name="arch" type="xml">
                <search string="P Contract">
					<field name="name"/>
                    <field name="shipt_month"/>
                    <field name="origin_new"/>
					<field name="partner_id"/>
					<field name="certificate_id"/>
					<field name="standard_id"/>
					<separator/>
                	<filter name ="groupby_origin" string="Origin" domain="[]" context="{'group_by':'origin_new'}"/>
                	<filter name ="groupby_shipt_month" string="Shipt Month" domain="[]" context="{'group_by':'shipt_month'}"/>
                	<filter name ="groupby_certificate_id" string="Certificate" domain="[]" context="{'group_by':'certificate_id'}"/>
                	<filter name ="groupby_product_id"  string="Product" domain="[]" context="{'group_by':'standard_id'}"/>
                	<filter name ="group_by_partner_id" string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
               </search>
            </field>
        </record>

        <record id="action_p_contract_traffic" model="ir.actions.act_window">
            <field name="name">P Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.contract</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','p_contract'), ('x_is_bonded','=',True)]</field>
            <field name="context">{'default_type':'p_contract', 'p_contract':True,'traffic':True}</field>
            <field name="search_view_id" ref="view_p_contract_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              		Create an P Contract, the first step of a new P contract.
              </p>
            </field>
        </record>

        <record id="action_p_contract_traffic_tree" model="ir.actions.act_window.view">
            <field eval="100" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_p_contract_traffic_tree"/>
            <field name="act_window_id" ref="action_p_contract_traffic"/>
		</record>
</odoo>