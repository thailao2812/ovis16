<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	
    	<record id="view_wizard_import_production_result_tree" model="ir.ui.view">
            <field name="name">wizard.import.production.result.view</field>
            <field name="model">wizard.import.production.result</field>
            <field name="arch" type="xml">
                <tree default_order="id desc">
					<field name="warehouse_id"/>
					<field name="name"/>
					<field name="user_id"/>
                    <field name="production_shift"/>
            		<field name="date_result"/>
            		<field name="state"/>
                </tree>
            </field>
        </record>
    	
    	<record id="view_wizard_import_production_result" model="ir.ui.view">
	        <field name="name">wizard.import.production.result.form</field>
	        <field name="model">wizard.import.production.result</field>
	        <field name="arch" type="xml">
		        <form string="Import Production"> 
		        	<header>
		        		<button string="Import" name="import_file" type="object" class="oe_highlight" states="draft"/>
	                	<button string="Báo cáo ca" name="report_kqsx" type="object" class="oe_highlight" invisible="1"/>
	                	<button string="Báo Cáo Tổng kết" name="report_summary_production" type="object" class="oe_highlight" invisible="1"/>
	                	<button string="Confirm" name="button_confirm" type="object" class="oe_highlight" states="draft"/>
	                	<field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
		        	</header>
					
		        	<sheet>
						 <h1><field name="name" readonly="1"/></h1>
						 
						<div class="oe_button_box" name="button_box">
							<button type="object" name="action_view_result" class="oe_stat_button" icon="fa-truck" 
									attrs="{'invisible': [('result_count','=',0)]}">
								<field name="result_count" widget="statinfo" string="Result"/>
							</button>
						</div>
						
			            <group>
							<group>
			            		<field name="file" required="0"/>
			            		<field name="production_shift"/>
		            		</group>
		            		<group>
								<field name="warehouse_id" required= "1"/>
			            		<field name="production_id" invisible="1"/>
			            		<!-- err ko thay sai
			            		<field name="resource_calendar_id" options="{'no_create': True, 'no_edit': True, 'no_create_edit':True}"/>
			            		-->
			            		<field name="date_result"/>
		            		</group>
		                </group>
		                <newline/>
		                <notebook>
							<page string="Result">
								<field name="import_result_ids" readonly="1">
									<tree>
										<field name="name"/>
										<field name="production_id"/>
										<field name="start_date"/>
										<field name="end_date"/>
										<field name="production_shift"/>
										<field name="state"/>
									</tree>
								</field>
							</page>
							
						</notebook>
	                </sheet>
	            </form>
	        </field>
	    </record>
	    
    	<record id="action_view_wizard_import_production_result" model="ir.actions.act_window">
            <field name="name">Import Production Result</field>
            <field name="res_model">wizard.import.production.result</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              		Create a import production.result, the first step of a Master Code.
              </p>
            </field>
        </record>
        
        
     

    </data>
</odoo>