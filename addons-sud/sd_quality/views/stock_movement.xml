        <record id="view_report_ned_stock_stack_search" model="ir.ui.view">
            <field name="name">report.ned.stock.stack.search</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <search string="stack search">
                	<field name="name" string="Stack"/>
                	<field name="p_contract_id" string="P Contract"/>
                	<field name="warehouse_id" string="Warehouse"/>
                	<field name="certificate_id" string="Certificate"/>
                    <field name="product_id"/>
                    <field name="zone_id"/>
                    <field name="production_id"/>
                    <group expand="1" string="Group By">
                    	<filter name="group_product" string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                    	<filter name="group_zone" string="Zone"  domain="[]" context="{'group_by':'zone_id'}"/>
                        <filter name="group_certificate" string="Certificate" domain="[]" context="{'group_by':'certificate_id'}"/>
                    	<filter name="group_warehouse" string="warehouse" domain="[]" context="{'group_by':'warehouse_id'}"/>
                   	    <filter name="Onhand" string="Onhand" domain="[('init_qty','!=',0)]" />
                   	    <filter name="group_production" string="Production" context="{'group_by':'production_id'}"/>
                   	    <filter name="group_districts" string="Nguồn Hàng" context="{'group_by':'districts_id'}"/>
                	</group>
                </search>
            </field>
        </record>
    
