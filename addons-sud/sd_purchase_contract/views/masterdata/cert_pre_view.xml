<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	
    	<record id="action_cert_pre" model="ir.actions.act_window">
            <field name="name">Certification Pre</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cert.pre</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a period, the first step of a new Period.
                </p><p>
                </p>
            </field>
        </record>
        
        

        <record id="view_cert_pre_tree" model="ir.ui.view">
            <field name="name">view_cert_pre_tree</field>
            <field name="model">cert.pre</field>
            <field name="arch" type="xml">
                <tree default_order="id desc">
                    <field name="name"/>
                    <field name="effective_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
             </field>
        </record>

        <record id="view_cert_pre_form" model="ir.ui.view">
            <field name="name">view_cert_pre_form</field>
            <field name="model">cert.pre</field>
			<field name="arch" type="xml">
	        <form>
                <header>
                        <button string="Stop Configuration" type="object" name="action_stop_config" class="oe_highlight" states="run"/>
                        <field name="state" widget="statusbar"/>
                </header>
	        	<sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="effective_date" required="1"/>
                            <field name="end_date" attrs="{'invisible': [('end_date', '=', False)], 'readonly': [('state', '=', 'stop')]}"/>
                            </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Certification Pre Configuration" name="cert_pre">
                            <field name="cert_pre_line_ids">
                                <tree editable="bottom">
                                    <field name="certificate_id" required="1"/>
                                    <field name="price_in_usd"/>
                                    <field name="price_in_vnd"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
				</sheet>
    		</form>
	      </field>
	    </record>

        
    </data>
</openerp>