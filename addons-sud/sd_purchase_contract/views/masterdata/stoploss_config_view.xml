<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="action_stoploss" model="ir.actions.act_window">
            <field name="name">Stoploss Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stoploss.config</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="search_view_id" ref="view_sales_fiscalyear_search"/>-->
            <field name="context">{}</field>
        </record>

        <record id="view_stoploss_tree" model="ir.ui.view">
            <field name="name">view_stoploss_tree</field>
            <field name="model">stoploss.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="effective_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
             </field>
        </record>

        <record id="view_stoploss_form" model="ir.ui.view">
            <field name="name">view_stoploss_form</field>
            <field name="model">stoploss.config</field>
			<field name="arch" type="xml">
	        <form>
                <header>
                        <button string="Stop Configuration" type="object" name="action_stop_config" class="oe_highlight" states="run"/>
                        <field name="state" widget="statusbar"/>
                </header>
	        	<sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="effective_date" required="1"/>
                            <field name="end_date" attrs="{'invisible': [('end_date', '=', False)], 'readonly': [('state', '=', 'stop')]}"/>
                        </group>
                        <group></group>
                    </group>
                    <notebook>
                        <page string="Stoploss Configuration" name="stop_loss">
                            <field name="stoploss_line_ids">
                                <tree editable="bottom">
                                    <field name="price" required="1"/>
<!--                                    <field name="effective_date" required="1"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
				</sheet>
    		</form>
	      </field>
	    </record>


    </data>
</openerp>