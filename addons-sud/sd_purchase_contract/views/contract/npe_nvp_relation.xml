                    	<filter string="Supplier" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="NPE" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'npe_contract_id'}"/>
