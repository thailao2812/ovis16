<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="delivery_order_inherit_form_views" model="ir.ui.view">
            <field name="name">delivery_order_inherit_form_views</field>
            <field name="model">delivery.order</field>
            <field name="inherit_id" ref="sd_sale_contract.view_delivery_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="after">
                    <button name="print_preview_delivery" type="object"
                            string="Preview Delivery" class="oe_highlight"
                            attrs="{'invisible': ['|',('status','=','Success'),('state','in',['done','cancel'])]}"/>
                </xpath>
                <xpath expr="//button[@name='print_preview_delivery']" position="after">
                    <button name="inventory_delivery" type="object" string="Issue Delivery" class="oe_highlight"
                            attrs="{'invisible': ['|',('status','=','Success'),('state','in',['done','cancel','draft'])]}"/>
                </xpath>
                <xpath expr="//button[@name='inventory_delivery']" position="after">
                    <button name="convert_invoice" type="object" string="Convert Delivery"
                            class="oe_highlight" attrs="{'invisible': [('status','!=','Success')]}"/>
                </xpath>
                <xpath expr="//field[@name='transrate']" position="after">
                    <field name="base64_pdf" invisible="1"/>
                </xpath>
                <group>
                    <group>
                        <field name="status"/>
                        <field name="ref_id"/>
                        <field name="invoice_number"/>
                        <field name="transaction_id"/>
                        <field name="invoice_issue_date"/>
                    </group>
                    <group></group>
                </group>
            </field>
        </record>
    </data>
</odoo>