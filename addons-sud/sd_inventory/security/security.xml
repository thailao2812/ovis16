<odoo>
    <data>
	    <record id="warehouse_user_picking_rule" model="ir.rule">
	        <field name="name">Warehouse User Picking Rule</field>
	        <field name="model_id" ref="model_stock_picking"/>
	        <field name="domain_force">[('warehouse_id','in',user._warehouses_domain()), ('picking_type_id','in',user._picking_type_domain())]</field>
	        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
	    </record>
	    
	     <record id="warehouse_stock_move_user_rule" model="ir.rule">
	        <field name="name">Warehouse User stock move Rule</field>
	        <field name="model_id" ref="model_stock_move"/>
	        <field name="domain_force">[('picking_id.warehouse_id','in',user._warehouses_domain()), ('picking_type_id','in',user._picking_type_domain())]</field>
	        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
	    </record>
	    
	    <record id="warehouse_stock_move_line_user_rule" model="ir.rule">
	        <field name="name">Warehouse User stock move line Rule</field>
	        <field name="model_id" ref="model_stock_move_line"/>
	        <field name="domain_force">[('picking_id.warehouse_id','in',user._warehouses_domain()), ('picking_id.picking_type_id','in',user._picking_type_domain())]</field>
	        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
	    </record>
	    
	    <record id="warehouse_stock_lot_user_rule" model="ir.rule">
	        <field name="name">Warehouse User stock lot Rule</field>
	        <field name="model_id" ref="model_stock_lot"/>
	        <field name="domain_force">[('warehouse_id','in',user._warehouses_domain())]</field>
	        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
	    </record>
	    
	     <record id="warehouse_stock_zone_user_rule" model="ir.rule">
	        <field name="name">Warehouse User stock Zone Rule</field>
	        <field name="model_id" ref="model_stock_zone"/>
	        <field name="domain_force">[('warehouse_id','in',user._warehouses_domain())]</field>
	        <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
	    </record>

		<record id="group_reopen_picking" model="res.groups">
            <field name="name">Reopen Picking Group</field>
        </record>
    </data>
</odoo>
