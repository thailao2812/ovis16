<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
		
		 <record id="vpicktree_inherit_add_allocated_total_qty" model="ir.ui.view">
	        <field name="name">vpicktree.inherit.add.allocated.total.qty</field>
	        <field name="model">stock.picking</field>
	        <field name="inherit_id" ref="stock.vpicktree"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//field[@name='state']" position="before">
	        		<field name="qty_available" sum="qty_available"/>
                    <field name="allocated_qty" sum="allocated_qty"/>
                </xpath>

				<xpath expr="//field[@name='name']" position="attributes">
					<attribute name="invisible">context.get('fot', False)</attribute>
				</xpath>
                
	        </field>
	    </record>
	    
		
	 <record id="view_picking_internal_search_sucden_inherit" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.sucden.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
			 <xpath expr="//field[@name='picking_type_id']" position="before">
            	<field name="production_id"/>
            	<field name="crop_id"/>
            </xpath>
            <xpath expr="//filter[@name='status']" position="after">
            	<filter string="Crop" name="crop_id" domain="[]" context="{'group_by': 'crop_id'}"/>
            </xpath>
            
        </field>
    </record>
    
    <record id="vpicktree_inherit_add_total_qty" model="ir.ui.view">
	        <field name="name">vpicktree.inherit.add.total.qty</field>
	        <field name="model">stock.picking</field>
	        <field name="inherit_id" ref="stock.vpicktree"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//field[@name='state']" position="before">
	        		<field name="zone_id"/>
                    <field name="product_id"/>
                    <field name="packing_id"/>
                    <field name="lot_id"/>
                    <field name="init_lot" invisible="not context.get('gip', False)"/>
                    <field name="total_bag" sum="total_bag"/>
                    <field name="total_init_qty" invisible="0" sum="total_init_qty" string="Net Weight"/> 
                    <field name="total_qty" sum="total_qty" string="Basis Qty" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='scheduled_date']" position="before">
                	<field name="date_done"/>
                	<field name="vehicle_no" required="0"/>
                </xpath>
                
                <xpath expr="//field[@name='name']" position="before">
                	<field name="warehouse_id" />
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                	<field name="crop_id" />
                </xpath>
                
                <xpath expr="//field[@name='scheduled_date']" position="attributes">
	          	  <attribute name="invisible">True</attribute>
              	</xpath>
              	
              	<xpath expr="//tree" position="attributes">
	          	  <attribute name="default_order">id desc</attribute>
              	</xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="description_name"  optional="show" invisible="not context.get('fot', False)"/>
                </xpath>
                
	        </field>
	    </record>
    	
    
	  <record id="view_picking_inherit_sucden_form" model="ir.ui.view">
            <field name="name">view.picking.inherit.sucden.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
			
				<xpath expr="//button[@name='action_confirm']" position="after">
	            	<button name="button_qc_assigned" string="Router to QC"  states="draft"
						type="object" class="oe_highlight" />
					<button name="button_sd_validate" string="Validate"  states="assigned"
						type="object" class="oe_highlight" />
					
					<button name="create_picking_transfers" type="object" string ="Create GTR" attrs="{'invisible': [('picking_type_code', '!=', 'transfer_out')]}"/>
					<button name="btt_reopen_stock" string="Reopen Stock"  states="done"
						type="object" class="oe_highlight" groups="sd_inventory.group_reopen_picking"/>
					
					
               </xpath>
               
               <xpath expr="//button[@name='action_confirm']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//button[@name='button_validate']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              
              <xpath expr="//button[@name='action_set_quantities_to_reservation']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
               <xpath expr="//button[@name='action_clear_quantities_to_zero']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              
              <xpath expr="//button[@name='button_scrap']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//button[@name='%(stock.act_stock_return_picking)d']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              
              <xpath expr="//button[@name='action_toggle_is_locked']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              
              <xpath expr="//button[@name='action_open_label_type']" position="attributes">
	          	  <attribute name="invisible">1</attribute>
              </xpath>
              
	              <xpath expr="//field[@name='date_done']" position="replace">
	                  <field name="origin"/>
		              <field name="date_done" string="Date of Transfer" required="1"/>
		              <field name="crop_id" readonly="0"/>
		        	  <field name="certificate_id" invisible="1"/>
		        	  <field name="cert_type"/>
		        	  <field name="pcontract_id"/>
		        	  <field name="description_name" invisible="not context.get('fot')"/> 
	              </xpath>
	              <xpath expr="//field[@name='picking_type_id']" position="after">
	              		<field name="warehouse_id" required="1"/>
	              		<field name="to_warehouse_id" attrs="{'required':[('picking_type_code', '=', 'transfer_out')],'invisible': [('picking_type_code', '!=', 'transfer_out')]}"/>
	              		<field name="picking_type_code" invisible="1"/>
	                	<field name="certificate_id" />
	                	<field name="districts_id" required="0" string="Nguồn Hàng"/>
	                	<field name="vehicle_no" required="0"/>
	                	<field name="trucking_id"/>
	                	<field name="delivery_id" attrs="{'required':[('picking_type_code', '=', 'transfer_out')]}"/>
	                	<field name="delivery_place_id"/>
	                	
	                </xpath>
	             <!--   
	             <xpath expr="//field[@name='picking_type_id']" position="attributes">
                	<attribute name="domain">[('id', 'in', user._picking_type_domain())]</attribute>
                </xpath>
                -->
	                
               <xpath expr="//field[@name='origin']" position="attributes">
	          	  <attribute name="invisible">True</attribute>
              </xpath>
              <xpath expr="//label[@for='partner_id']" position="attributes">
	          	  <attribute name="string">Supplier</attribute>
              </xpath>
              
              <xpath expr="//field[@name='date_deadline']" position="attributes">
	          	  <attribute name="invisible">True</attribute>
              </xpath>
             
            <xpath expr="//page[@name='detailed_operations']" position="replace">
            	<page string="Detailed Operations" name="detailed_operations">
            		<field name="move_line_ids_without_package"  attrs="{'readonly': [('state', '=', 'done')]}"
	            		context="{'tree_view_ref': 'stock.view_stock_move_line_detailed_operation_tree', 'default_picking_id': id, 'default_location_id': location_id, 
	            			'default_location_dest_id': location_dest_id, 'default_company_id': company_id}"/>
            	</page>
            </xpath>
              <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="before">
					<button name="%(sd_inventory.action_view_create_stock_stack)d" 
	                      string="Create stack" type="action"
	                      states="draft,waiting,confirmed,assigned"
	                      groups="stock.group_stock_user" invisible="0"/>
					<field name="packing_id"/>
					<field name="first_weight" sum="first_weight"/>
					<field name="second_weight" sum="second_weight" />
					<field name="bag_no"/>
					<field name="init_qty"/>
				</xpath>
            </field>
        </record>
        
        
