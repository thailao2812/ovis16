	<template id="report_security_gate">
	    <t t-call="report.html_container">
	        <t t-foreach="docs" t-as="o">
	            <t t-call="ned_security_gate_queue.template_report_security_gate" t-lang="o.security_id.partner_id.lang"/>
	            <p style="page-break-before:always;"></p>
	        </t>
	    </t>
	</template>
	
	<record id="paperformat_security_gate" model="report.paperformat">
            <field name="name">Security Gate</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">3126</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">130</field>
        </record>
        
	<report 
