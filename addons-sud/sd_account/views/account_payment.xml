<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       
       <record model="ir.ui.view" id="view_account_payment_general_modify_form">
	        <field name="name">view.account.payment.general.modify.form</field>
	        <field name="model">account.payment</field>
	        <field name="inherit_id" ref="account.view_account_payment_form"/>
	        <field name="arch" type="xml">
	        	
		        
	        	<xpath expr="//field[@name='payment_type']" position="attributes">
		        	<attribute name="widget">selection</attribute>
		        </xpath>
	        	<xpath expr="//field[@name='currency_id']" position="attributes">
		        	<attribute name="invisible">True</attribute>
		        </xpath>
		        <xpath expr="//field[@name='journal_id']" position="attributes">
		        	<attribute name="widget">many2one</attribute>
		        	<attribute name="options">{'no_create': True}</attribute>
		        </xpath>
		        <xpath expr="//field[@name='destination_journal_id']" position="attributes">
		        	<attribute name="widget">many2one</attribute>
		        	<attribute name="options">{'no_create': True}</attribute>
		        </xpath>
		        
	        	<xpath expr="//field[@name='journal_id']" position="before">
	        		<field name="partner_bank_id" attrs="{'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))]}"
	        			context="{'default_partner_id': partner_id}"
	        			domain="[('partner_id','=',partner_id)]"/>
        			<field name="extend_payment" required="1" attrs="{'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))]}"/>
	        	</xpath>
	        	
	        	<xpath expr="//field[@name='date']" position="after">
	        		<field name="conversion_currency_id" attrs="{'invisible': [('diff_currency', '=', True)]}"/>
	        		<field name="conversion_currency_rate" attrs="{'invisible': [ ('diff_currency', '=', True)]}"/>
	        		<field name="conversion_currency_amount" attrs="{'invisible': [ ('diff_currency', '=', True)]}"/>
	        		
	        		<field name="diff_currency" invisible='1'/>
	        		<label for="currency_rate" attrs="{'invisible': [('diff_currency', '=', False)]}"/>
                    <div name="currency_rate_div" class="o_row" attrs="{'invisible': [('diff_currency', '=', False)]}">
                        <field name="currency_rate"/> - <field name="invoice_currency_id" readonly='1'/>
                    </div>
	        		
	        	</xpath>
	        			        
	        	<xpath expr="//field[@name='journal_id']" position="after">
	        		<field name="account_analytic_id" 
	        			options="{'no_create': True, 'no_open': True}" context="{'filter_company_id': company_id}"/>
	        		<!-- THANH: required khi Transfer -->
	        		<field name="responsible"/>
	        		<field name="partner_type"/>
	        		<field name="currency_id"/>
	        		<field name="company_id" groups="base.group_multi_company"/>
	        		<!-- Invisible this field to hide field amount -->
	        	</xpath>
	        	
	        	<xpath expr="//field[@name='company_id']" position="before">
					<field name="company_analytic_account_id"/>
		        </xpath>
                    
	        </field>
       </record>
       
       <record model="ir.ui.view" id="view_account_payment_tree_reach_account_modify">
	        <field name="name">view_account_payment_tree_reach_account_modify</field>
	        <field name="model">account.payment</field>
	        <field name="inherit_id" ref="account.view_account_payment_tree"/>
	        <field name="arch" type="xml">
	        	<xpath expr="//field[@name='date']" position="before">
	            	<field name="account_analytic_id"/>
		        </xpath>
		        
		        <xpath expr="//tree" position="attributes">
	            	<attribute name="default_order">id desc"</attribute>
		        </xpath>
		        
		        
		        <xpath expr="//field[@name='partner_id']" position="after">
		        	<field name="invoice_reference"/>
		        	<field name="payment_reference"/>
		        	<field name="purchase_contract_id"/>
		        </xpath>
		        <xpath expr="//field[@name='journal_id']" position="after">
	            	<field name="payment_type"/>
	            	<field name="amount"/>
		        </xpath>
		        
		        <xpath expr="//field[@name='amount_company_currency_signed']" position="attributes">
	            	<attribute name="optional">hide</attribute>
		        </xpath>
		        
		        	
		        
		        
		        
	        	<xpath expr="//field[@name='state']" position="before">
	            	<field name="ref"/>
		        </xpath>
				<xpath expr="//field[@name='state']" position="after">
	            	<field name="company_analytic_account_id" optional="hide"/>
		        </xpath>
				
	        </field>
        </record>
        
        <record id="account.action_account_payments_payable" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="res_model">account.payment</field>
            <field name="domain">[('move_id', '!=', False)]</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="context">{
                'default_payment_type': 'outbound',
                'default_partner_type': 'supplier',
                'search_default_outbound_filter': 1,
                'default_move_journal_types': ('bank', 'cash'),
            }</field>
            <field name="view_id" ref="account.view_account_supplier_payment_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Register a payment
                </p><p>
                  Payments are used to register liquidity movements. You can process those payments by your own means or by using installed facilities.
                </p>
            </field>
        </record>
       
       
    </data>
</odoo>
