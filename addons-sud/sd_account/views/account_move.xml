<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
		<record id="view_out_invoice_tree_sucden_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.sucden.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name ="journal_id"/>
            	</field>
            	
            	<xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date_due']" position="after">
                	<field name="sale_contract_id"/>
                	<field name="commercial_name"/>
                    <field name ="payment_reference"/>
                    <field name="product_id"/>
                    <field name="total_qty" sum="total_qty"/>
                </xpath>
                
            </field>
        </record>
     
     <record id="e_invoicing_form_inherit_sucden_account_move" model="ir.ui.view">
            <field name="name">e.invoicing.form.inherit.sucden.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
				
				<xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='ref']" position="after">
                   <field name="commercial_name"/>
                   <field name="account_analytic_id" required = "1"/>
                	<field name="company_analytic_account_id"/>
                </xpath>
                
            </field>
        </record>
     
    </data>
</odoo>
